@model IEnumerable<WebStore.Models.Employee>
@{
    ViewData["Title"] = "Список сотрудников";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<hr />
<div class="container">
    <table class="table">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Patronymic</td>
                <td>@item.Surname</td>
                <td>@item.Age</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a>
                </td>
            </tr>
        }
    </table>
</div>